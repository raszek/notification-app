{% extends 'base.html.twig' %}


{% block body %}
<div class="mt-3">

    <a href="{{ path('app_person_create') }}" class="btn btn-primary">
        Add
    </a>
    <a href="{{ path('app_notification_send') }}" class="btn btn-secondary ms-2">
        Send notifications
    </a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Lastname</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ person.firstName }}</td>
                <td>{{ person.lastName }}</td>
                <td>{{ person.email }}</td>
                <td>{{ person.phone }}</td>
                <td>{{ person.emailSubscription ? '&#10003;' : 'X' }}</td>
                <td>{{ person.phoneSubscription ? '&#10003;' : 'X' }}</td>
                <td class="d-flex flex-row">
                    <a href="{{ path('app_person_edit', {id: person.id}) }}" class="btn btn-info">
                        &#9998;
                    </a>
                    <form action="{{ path('app_person_remove', {id: person.id}) }}" method="post">
                        <input type="submit" value="X" class="ms-2 btn btn-danger">
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
